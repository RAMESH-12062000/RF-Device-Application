<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="_IddialogFP"
        resizable="false"
        draggable="true"
        contentWidth="30%"
        title="Reset Password"
    >
        <customHeader>
            <Bar id="_IDBar1">
                <contentMiddle>
                    <Title
                        id="_IDTitle1"
                        text="Create New Password"
                    />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="_IDButton1"
                        icon="sap-icon://decline"
                        press="onCloseFP"
                        tooltip="Close"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <form:SimpleForm
                id="idRegisterUserDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <HBox id="idLockedBtn2">
                    <Button
                        id="idLockedBtn3737"
                        icon="sap-icon://locked"
                        tooltip="Locked"
                        type="Transparent"
                    />
                    <Input
                        id="idInputPassword"
                        value=""
                        placeholder="Enter New Password.."
                        editable="true"
                        type="Password"
                        width="180%"
                    />
                </HBox>
                <HBox id="idLockedIcon">
                    <Button
                        id="idLockedBTn"
                        icon="sap-icon://locked"
                        tooltip="Locked"
                        type="Transparent"
                    />
                    <Input
                        id="idInputConfirmPassword"
                        value=""
                        placeholder="Confirm Password.."
                        editable="true"
                        type="Password"
                        width="180%"
                    />
                </HBox>
                <VBox
                    id="PasswordbuttonVBox"
                    class="sapUiSmallMarginTop"
                    alignItems="End"
                >
                    <HBox
                        id="ResetPasswordHBox"
                        justifyContent="End"
                        alignItems="End"
                        class="sapUiSmallMarginTop"
                    >
                        <Button
                            id="idResetRegisterUserButton"
                            text="Reset"
                            press="onRegisterSubmitDialog"
                            class="onResetRegisterBtn"
                        />
                    </HBox>
                </VBox>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
